<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<Pane fx:id="rootPane" fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml">
    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
    <BorderPane styleClass="gameBoard" fx:id="gameBoard">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
    </BorderPane>

    <Group fx:id="groupNotification" layoutX="90" layoutY="125">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>

    <VBox fx:id="scoreContainer" layoutX="240" layoutY="50" spacing="10" alignment="TOP_CENTER">
        <Label text="SCORE" styleClass="nextBrickLabel"/>
        <Text fx:id="scoreText" text="0" styleClass="scoreClass"/>
    </VBox>

    <VBox fx:id="nextBrickContainer" layoutX="240" layoutY="150" spacing="5" alignment="TOP_CENTER">
        <Label text="NEXT" styleClass="nextBrickLabel"/>
        <GridPane fx:id="nextBrickPanel" styleClass="nextBrick" hgap="1" vgap="1"/>
    </VBox>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>