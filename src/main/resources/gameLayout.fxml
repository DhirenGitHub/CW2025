<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<Pane fx:id="rootPane" fx:controller="com.comp2042.GuiController"
      xmlns:fx="http://javafx.com/fxml" prefWidth="800" prefHeight="600">
    <GridPane fx:id="brickPanel" vgap="1" hgap="1"/>
    <BorderPane styleClass="gameBoard" fx:id="gameBoard" layoutX="225" layoutY="45">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
    </BorderPane>

    <Group fx:id="groupNotification" layoutX="225" layoutY="45">
    </Group>

    <VBox fx:id="sidebarContainer" layoutX="465" layoutY="75" spacing="15" alignment="TOP_CENTER" prefWidth="100">
        <VBox fx:id="scoreContainer" spacing="5" alignment="TOP_CENTER">
            <Label text="SCORE" styleClass="nextBrickLabel"/>
            <Text fx:id="scoreText" text="0" styleClass="scoreClass"/>
        </VBox>

        <VBox fx:id="highScoreContainer" spacing="5" alignment="TOP_CENTER">
            <Label text="HIGHSCORE" styleClass="nextBrickLabel"/>
            <Text fx:id="highScoreText" text="0" styleClass="highScoreClass"/>
        </VBox>

        <VBox fx:id="levelContainer" spacing="5" alignment="TOP_CENTER">
            <Label text="LEVEL" styleClass="nextBrickLabel"/>
            <Text fx:id="levelText" text="1" styleClass="levelClass"/>
        </VBox>

        <VBox fx:id="nextBrickContainer" spacing="5" alignment="TOP_CENTER">
            <Label text="NEXT" styleClass="nextBrickLabel"/>
            <GridPane fx:id="nextBrickPanel" styleClass="nextBrick" hgap="1" vgap="1" layoutX="40" layoutY="30"/>
        </VBox>

        <VBox fx:id="linesClearedContainer" spacing="5" alignment="TOP_CENTER">
            <Label text="LINES" styleClass="nextBrickLabel"/>
            <Text fx:id="linesClearedText" text="0" styleClass="linesClearedClass"/>
        </VBox>
    </VBox>

    <GameOverPanel fx:id="gameOverPanel" layoutX="0" layoutY="0"/>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>